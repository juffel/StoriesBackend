<h1>Geschichte anpassen</h1>
<div id="creation-date" data-creation-date="<%= @story.created_at %>">
    Hochgeladen <%= @story.created_at.strftime('um %H:%M am  %d.%m.%Y') %>
</div>
<div>
<%= form_for @story do |f| %>
  <div class="form-group">
    <%= f.label 'Titel' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'ErzÃ¤hler' %>
    <%= f.text_field :narrator, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Ort' %>
    <%= f.text_field :place, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Beschreibung' %>
    <%= f.text_area :text, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "Speichern", class: 'form-control' %>
  </div>
<% end %>
</div>
